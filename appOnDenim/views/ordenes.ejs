<!DOCTYPE html>
<html lang="es">
    <%- include('partials/head') %>
    <%- include('partials/headLogin.ejs') %>
<body>
    <%- include('partials/header') %>
    <main class="profile">
        <div class="main-profile">
        <h3>Â¡Hola <%=  user.fullName %>!</h3>
        <div class="container wow fadeIn animated">
                <h2 class="mt-5 mb-3 h2 text-center"> Pedido Nro <%= order.id %>
                </h2>
                <div class="card my-5">
                    <div class="card-body">
                        <table class="table table-responsive-md mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 50px;">
                                        <strong>#</strong>
                                    </th>
                                    <th class="th-lg">
                                        <strong>Producto</strong>
                                    </th>
                                    <th class="th-lg ">
                                        <strong>Precio</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>Cantidad</strong>
                                    </th>
                                    <th class="text-center">
                                        <strong>Subtotal</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="cartRows">
                                <% for( let i=0; i < order.orderItems.length; i++ ) { %>
                                    <tr>
                                        <th scope="row">
                                            <%= i + 1 %>
                                        </th>
                                        <td>
                                            <%= order.orderItems[i].name %>
                                        </td>
                                        <td>$ <%=  toThousand(Number((order.orderItems[i].price)))%>
                                        </td>
                                        <td class="text-center">
                                            <%= order.orderItems[i].quantity%>
                                        </td>
                                        <td class="text-center">$
                                            <%=  toThousand(Number((order.orderItems[i].price * order.orderItems[i].quantity)))%>
                                        </td>
                                    </tr>

                                    <% } %>
                            </tbody>
                        </table>
                        <div class="card-footer text-right">
                            <h2>Total: <span class="totalAmount">$ <%=  toThousand(Number((order.total))) %> </span></h2>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header text-center">
                        Detalles de la compra
                    </div>
                    <div class="card-body" id="checkoutCart">
                        <div class="row">
                            <div class=" col-md-6">
                                <p class="mb-0"><strong>Tipo Envio:</strong>
                                    <%= order.shippingMethod %>
                                </p>
                            </div>
                            <div class=" col-md-6">
                                <p class="mb-0"><strong>Pago:</strong>
                                    <%= order.paymentMethod %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/user/profile" class="btn btn-primary btn-block">Volver a mis pedidos</a>
                    </div>
                </div>
            </div>

            </main>
            <%- include('partials/footer') %>
        </body>
        </html>